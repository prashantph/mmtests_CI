# pedsort
export PEDSORT_MIN_THREADS=1
export PEDSORT_MAX_THREADS=$((NUMCPUS/2))
export PEDSORT_ITERATIONS=4
export PEDSORT_NFILES=1000
export PEDSORT_NFILES_WORDS=10000
export PEDSORT_CACHE=warm
export PEDSORT_TMPFS=yes
